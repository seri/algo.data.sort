#! /bin/sh

export TIME="Time: %es - Memory: %MK"
export TIMEFORMAT=%3lR

dir=`dirname $0`

echo "BENCHMARKING $1"
for file in $dir/../input/$2_*; do
    basename=`basename $file`
    echo -n "Benchmark for $basename ... "
    if [ -x /usr/bin/time ]; then
        /usr/bin/time $1 $file sort.out
    else
        time $1 $file sort.out
    fi
    rm sort.out
done
